#:kivy 1.10.0

<ClockProgram>:
    bgimage: aimg

    AsyncTouchImage:
        id: aimg
        size: root.size
        source: "https://source.unsplash.com/featured/?nature"
        allow_stretch: False
        keep_ratio: True

    Label:
        font_size: 90
        center_x: root.width/2
        center_y: root.height/2
        top: root.top - 50
        text: root.curtime